<% include ../partials/header %>
<div class="container">
    <h1 class="text-center">Edit <%= movie.name%></h1>
    <div class="row">
        <div style="width: 35%; margin: 25px auto">
            <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[name]" value="<%= movie.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[image]" value="<%= movie.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[description]" value="<%= movie.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-info">Submit!</button>
                </div>
            </form>
            <a href="/movies">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
