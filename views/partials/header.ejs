<!DOCTYPE html>
<html>
    <head>
        <title>IMBD</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <link rel="stylesheet" href="/stylesheets/star.css">
        
    </head>
    <body>
        <nav class="navbar navbar-expand-sm bg-light" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">Movies</a>
                </div>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="nav navbar-nav navbar-right">
                        <% if(!currentUser){%>
                            <li class="nav-item"><a href="/login" class="nav-link">Sign in</a></li>
                            <li class="nav-item"><a href="/register" class="nav-link">Sign up</a></li>
                        <% } else{ %>
                        <li class="nav-item"><a href="#"  class="nav-link">Signed In As <%= currentUser.username%></a></li>
                        <li class="nav-item"><a href="/logout" class="nav-link">Sign out</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            <% if(error &&error.length>0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error%>
            </div>
            <% } %>
            <% if(success &&success.length>0){ %>
            <div class="alert alert-success" role="alert">
                <%= success%>
            </div>
            <% } %>
        </div>
        